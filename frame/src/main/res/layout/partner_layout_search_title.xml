<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_search_bg"
    android:orientation="horizontal">

    <AutoCompleteTextView
        android:id="@+id/et_search_title_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/icon_search"
        android:ellipsize="end"
        android:imeActionLabel="@string/text_search"
        android:imeOptions="actionSearch"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:textColorHint="#660A1F14"
        android:textSize="@dimen/font_sp_14" />

    <ImageView
        android:id="@+id/btn_search_title_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/space_l"
        android:layout_marginStart="4dp"
        android:src="@drawable/btn_search_clear"
        android:visibility="gone" />

</LinearLayout>